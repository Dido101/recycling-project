<script>
  function checkAnswer(answer) {
    const result = document.getElementById('result');

    if (answer === 'correct') {
      result.textContent = 'Yeah you are right.';
      result.style.color = 'green';
    } 
    else if (answer === 'nci') {
      result.textContent = 'Huh???';
      result.style.color = 'orange';
    }
    else {
      result.textContent = 'LOL try again!!';
      result.style.color = 'red';
    }
  }
</script>
